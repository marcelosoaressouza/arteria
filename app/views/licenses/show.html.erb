<%- model_class = License -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human %> <%= @license.name %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @license.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @license.user.firstname + " " + @license.user.lastname %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")), licenses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_license_path(@license), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), license_path(@license), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
</div>
