<%- model_class = License -%>

<div class="page-header"><h3><%=t '.title', :default => model_class.model_name.human.pluralize %></h3></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @licenses.each do |license| %>
      <tr>
        <td><%= link_to license.id, license_path(license) %></td>
        <td><%= license.name %></td>
        <td><%= license.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_license_path(license), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), license_path(license), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_license_path, :class => 'btn btn-primary' %>
