<%- model_class = Audio -%>
<table class="table table-striped">
  <tbody>
    <% @audios.each do |audio| %>
      <tr>
        <td><%= link_to image_tag('/assets/Audio.jpg', :width => '75'), view_audios_path(audio), :id => "video-box" %></td>
        <td style="font-weight: bold;"><%= link_to audio.title, audio_path(audio) %></td>
        <td><%= audio.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
