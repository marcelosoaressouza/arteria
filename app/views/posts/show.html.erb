  <%- model_class = Post -%>

  <div class="page-header">
    <h3><%= @post.title %></h3>
  </div>

  <dd><%= @post.content.html_safe %></dd>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
    <dd><%= @post.user.firstname + " " + @post.user.lastname %></dd>

    <dt><strong><%= model_class.human_attribute_name(:license_id) %>:</strong></dt>
    <dd><%= @post.license.name %></dd>

    <dt><strong><%= model_class.human_attribute_name(:tags) %>:</strong></dt>
    <dd>
      <% @post.tags.any? %>
          <% @post.tags.each do |tag| %>
          <%= link_to tag.name, tagged_url(:tag => tag.name) %>
      <% end %>
    </dd>

    <% if user_signed_in? %>
      <dt><strong><%= model_class.human_attribute_name(:published) %>:</strong></dt>
      <dd><%= @post.published %></dd>
    <% end %>
  </dl>

<% if user_signed_in? %>
  <% if current_user.has_role? :admin %>
    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")), posts_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(@post), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(@post), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
    </div>
  <% end %>
<% end %>
