<% if params[:action] != 'edit' %>
  <% if ! @user.errors.any? %>
    <% @user.users_roles.build %>
  <% end %>
<% end %>

<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :firstname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :firstname, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lastname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lastname, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :users_roles, :class => 'control-label' %>
    <div class="controls">
      <%= f.fields_for :users_roles do |u| %>
        <%= u.select( :role_id, @roles.collect { |r| [r.name, r.id] }, { :default => :guest } ) %>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
