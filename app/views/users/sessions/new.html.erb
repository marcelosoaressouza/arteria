<br/><br/>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'span5', :size => '64', :maxlength => '254'%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'span3', :size => '64', :maxlength => '254' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
        <%= f.label I18n.t(:remember_me), :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :remember_me %>
    </div>
  </div>
  <% end -%>

  <div class="form-actions">
    <%= f.submit I18n.t("Sign in"), :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
